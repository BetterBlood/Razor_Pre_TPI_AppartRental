@model IEnumerable<Razor_Pre_TPI_AppartRental.Models.AppartementViewModel>

@{ ViewData["Title"] = "Index"; }

<h1>Index</h1>

@{ if (User.IsInRole("0"))
                {
    <p>testtesttesttest</p> }
                else if (User.IsInRole("admin"))
                {
    <p>admin</p> }
                else if (User.IsInRole("ADMIN"))
                {
    <p>ADMIN</p> }
                else
                {
    <p>ooooooooooooooooooooooo</p> } }
<p>
    <a asp-action="Create">Create New</a> <!--Question : comment on accède a l'utilisateur ? (je voudrai afficher ce bouton seulement si l'utilisateur a les droit admin par exemple)-->
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InWishlist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surface)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Year)
    </td>
    <td>
        <button id="@item.AppartementId" data-val="@item.InWishlist" class="btn btnWish">
            @(item.InWishlist ? " - " : " + ")
        </button>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Surface)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Rating)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.AppartementId">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.AppartementId">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.AppartementId">Delete</a>
    </td>
</tr>}
    </tbody>
</table>


@section Scripts {
    <script>
        jQuery(document).ready(function () {
            $('.btnWish').click(function (e) {
                var btn = $(this);
                var AppartementId = btn.attr('id');
                var AppartementVal = btn.attr('data-val') == "False" ? 0 : 1;

                $.get('/Appartements/AddRemove?appartId=' + AppartementId + '&val=' + AppartementVal,
                    function (data) {
                        if (data == 0) {
                            btn.attr('data-val', 'False');
                            btn.html(' + ');
                        }
                        else if (data == 1) {
                            btn.attr('data-val', 'True');
                            btn.html(' - ');
                        }
                    });
            });
        });
    </script>
}
